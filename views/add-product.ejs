<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
                <label for="price">Price</label>
                <input type="number" step=0.01 name="price" id="price">
                <label for="desc">Description</label>
                <input type="text" name="desc" id="desc">
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
        <form class="product-form" action="/admin/remove-product" method="POST">
            <div class="form-control">
                <label for="removeProduct">Title of product being removed</label>
                <input type="text" name="removeProduct">
            </div>

            <button class="btn" type="submit">Remove Product</button>
        </form>
    </main>
<%- include('includes/end.ejs') %>